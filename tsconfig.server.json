{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "index.ts",
    "server"
  ],
  "exclude": [
    "./client"
  ]
}
